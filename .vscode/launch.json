  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch App",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceRoot}/src/main.go",
      "env": {
        "BANTER_BUS_DB_HOST": "localhost"
      },
      "args": []
    },
    {
      "name": "Run Tests",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "remotePath": "",
      "program": "${file}",
      "env": {
        "BANTER_BUS_DB_HOST": "localhost"
      },
      "args": [],
      "showLog": true
    },
    {
      "name": "Run Debugger in Docker",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/go/src/",
      "port": 2345,
      "host": "127.0.0.1",
      "showLog": true
    }
  ]
}
